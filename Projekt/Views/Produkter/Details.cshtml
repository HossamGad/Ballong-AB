@model Produkter

@using Microsoft.AspNetCore.Identity

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>

        <a asp-controller="Produkter" asp-action="UpdateProdukt1" asp-route-produktId="@Model.ProduktId"><h2>Ändra produkt</h2></a>

    </div>
</div>


